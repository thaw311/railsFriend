<h1>Friends List</h1>
<table class="table table-striped table-bordered table-hover">
   <thead class="thead-dark">
    <tr>
      <th>Name</th>      
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>      
      <th ></th>
    </tr>
  </thead>

  <tbody>
    <% if user_signed_in? %>
    <% @fri.each do |friend| %>      
      <tr>
        <td><%= link_to friend.first_name + ' ' + friend.last_name, friend %></td>        
        <td><%= friend.email %></td>
        <td><%= friend.phone %></td>
        <td><%= friend.twitter %></td>       
        <td><%= link_to 'Destroy', friend, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td> 
      </tr>     
    <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Friend', new_friend_path, class:"btn btn-secondary" %>
